<div class="row">
    <div class="col-md-12 users-table">
        <h2>User Data for <%= user.fullName %></h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Zip Code</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= user.fullName %></td>
                    <td><%= user.email %></td>
                    <td><%= user.zipCode %></td>
                    <td><%= user.password %></td>
                </tr>
            </tbody>
        </table>

        <% if (user.subscribedAccount) { %>
            <h3 class="text-center">This user has a 
                <a href="<%=`/subscribers/${user.subscribedAccount}` %>">
                    subscribed account
                </a>.
            </h3>
        <% } %>
    </div>
</div>